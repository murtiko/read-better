{
  "name": "Read Better",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "A simple extension to help read better and faster. https://github.com/murtiko/read-better. https://www.flaticon.com/free-icons/brain",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["scripting", "activeTab"],
  "icons": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "128": "images/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "128": "images/icon-128.png"
    }
  }
}

